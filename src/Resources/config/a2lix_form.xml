<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Form Manipulators -->
        <service id="a2lix_auto_form.doctrine_orm.manipulator" class="A2lix\AutoFormBundle\Form\Manipulator\DoctrineORMManipulator" public="false">
            <argument type="service" id="a2lix_auto_form.doctrine_orm_info" />
            <argument type="collection"></argument>
        </service>

        <service id="a2lix_auto_form.default.manipulator" alias="a2lix_auto_form.doctrine_orm.manipulator" />

        <!-- Form Listeners -->
        <service id="a2lix_auto_form.default.listener.autoform" class="A2lix\AutoFormBundle\Form\EventListener\AutoFormListener">
            <argument type="service" id="a2lix_auto_form.doctrine_orm.manipulator" />
        </service>

        <!-- Form Types -->
        <service id="a2lix_auto_form.default.type.autoform" class="A2lix\AutoFormBundle\Form\Type\AutoFormType">
            <argument type="service" id="a2lix_auto_form.default.listener.autoform" />

            <tag name="form.type" />
        </service>
    </services>
</container>
