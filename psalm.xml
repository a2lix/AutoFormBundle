<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
>
    <projectFiles>
        <directory name="*" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="tests/Fixtures" />
            <file name="src/A2lixAutoFormBundle.php" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <MissingConstructor errorLevel="suppress" /> <!-- PHP8 Property hook -->
        <PropertyNotSetInConstructor errorLevel="suppress" /> <!-- PHP8 Property hook -->
        <RedundantPropertyInitializationCheck errorLevel="suppress" /> <!-- PHP8 Property hook -->

        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <file name="src/Form/Attribute/AutoTypeCustom.php" />
                <file name="tests/Form/DataProviderDto.php" />
                <file name="tests/Form/DataProviderEntity.php" />
            </errorLevel>
        </PossiblyUnusedMethod>
        <UnusedClass>
            <errorLevel type="suppress">
                <file name="tests/Form/Type/AutoTypeTest.php" />
            </errorLevel>
        </UnusedClass>
    </issueHandlers>
</psalm>
